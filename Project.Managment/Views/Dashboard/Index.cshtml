<!-- The Modal -->
<div class="modal" id="addProject">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Project</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <!-- Modal body -->
            <div class="modal-body">
                <div class="modal-form">
                    <div class="form-group row">
                        <label for="" class="col-sm-4 col-form-label">Customer</label>
                        <div class="col-sm-8">
                            <select class="form-control" id="txtCustomer">
                                <option>Customer A</option>
                                <option>Customer B</option>
                                <option>Customer C</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="" class="col-sm-4 col-form-label">Data</label>
                        <div class="col-sm-8">
                            <input type="email" class="form-control" id="txtData" placeholder="Data">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="" class="col-sm-4 col-form-label">Fornotore</label>
                        <div class="col-sm-8">
                            <input type="email" class="form-control" id="txtFornotore" placeholder="Fornotore">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="" class="col-sm-4 col-form-label">Lotto</label>
                        <div class="col-sm-8">
                            <input type="email" class="form-control" id="txtLotto" placeholder="Lotto">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="" class="col-sm-4 col-form-label">Co dice bolia accompagnamento</label>
                        <div class="col-sm-8">
                            <input type="email" class="form-control" id="txtCodiceboliaaccompagnamento" placeholder="Co dice bolia accompagnamento">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="" class="col-sm-4 col-form-label">Operatore</label>
                        <div class="col-sm-8">
                            <input type="email" class="form-control" id="txtOperatore" placeholder="Operatore">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="" class="col-sm-4 col-form-label">N. articoli caricati</label>
                        <div class="col-sm-8">
                            <input type="email" class="form-control" id="txtNarticolicaricati" placeholder="N. articoli caricati">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="" class="col-sm-4 col-form-label">Totale imponibile</label>
                        <div class="col-sm-8">
                            <input type="email" class="form-control" id="txtTotaleimponibile" placeholder="Totale imponibile">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="" class="col-sm-4 col-form-label">Totale iva</label>
                        <div class="col-sm-8">
                            <input type="email" class="form-control" id="txtTotaleiva" placeholder="Totale iva">
                        </div>
                    </div>
                </div>
            </div>
            <!-- Modal footer -->
            <div class="modal-footer">

                <button type="button" class="btn btn-success" onclick="OnProjectAdd();" id="prjAdd" style="display:none;">Save</button>
                <button type="button" class="btn btn-success" onclick="OnProjectUpdateSave();" id="prjUpdate" style="display:none;">Update</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
        </div>
